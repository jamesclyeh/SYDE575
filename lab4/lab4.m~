close all; clear; clc;

%========================================
% Restoration in Frequency Domain
%========================================

h = fspecial('disk', 4);
f = im2double(imread('cameraman.tif'));
h_freq = fft2(h, size(f, 1), size(f, 2)); % pad h
f_blur = real(ifft2(h_freq .* fft2(f)));
disp(strcat('PSNR oringinal vs LPF denoised radius 60: ', num2str(psnr(lena, low_pass_fft_lena_gauss_60))));
f_restored = ifft2(fft2(f_blur) ./ h_freq);

figure(1);
imshow(f, []);
figure(2)
imshow(f_blur, []);
figure(3)
imshow(f_restored, []);